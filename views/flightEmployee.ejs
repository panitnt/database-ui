<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Employee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
</head>

<body>
    <h1>Flight Employee</h1>
    <form action="/search-flight-employee" method="POST">
        <label>
            <span>Flight Number : </span>
            <input type="text" name="flightn" value="" />
        </label>
        <input type="submit" value="submit" />
    </form>
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td>Larry</td>
            <td>the Bird</td>
            <td>@twitter</td>
          </tr>
        </tbody>
      </table>
    <table border="1">
        <thead>
            <th>Flight Number</th>
            <th>Airline Name</th>
            <th>Flight Date</th>
            <th>Position</th>
            <th>Aircraft Type</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Passport Number</th>
            <th>Gender</th>
            <th>Nationality</th>
            <th>Birthday</th>
        </thead>
        <tbody>
            <%flightEmployeeResult.forEach(function(flightEmployeeResult, index){ %>
                <tr>
                    <td>
                        <%=flightEmployeeResult.FlightNumber%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.airlineName%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.flight_date%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.role%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.type%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.FirstName%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.MiddleName%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.LastName%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.Passport_number%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.nationality%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.gender%>
                    </td>
                    <td>
                        <%=flightEmployeeResult.birthday.toDateString()%>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <button><a href="/flight-employee">Back</a></button>
</body>

</html>